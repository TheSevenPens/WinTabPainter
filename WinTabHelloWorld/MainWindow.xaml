<Window x:Class="WinTabHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinTabHelloWorld"
        mc:Ignorable="d"
        Title="WinTabHelloWorld" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Row="0" Background="#EEE" Padding="5" Margin="5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Gx:" FontWeight="Bold" Margin="0,0,5,0" ToolTip="Global X"/>
                <TextBlock x:Name="ValGx" Text="0" MinWidth="40" Margin="0,0,15,0"/>

                <TextBlock Text="Gy:" FontWeight="Bold" Margin="0,0,5,0" ToolTip="Global Y"/>
                <TextBlock x:Name="ValGy" Text="0" MinWidth="40" Margin="0,0,15,0"/>

                <TextBlock Text="Cx:" FontWeight="Bold" Margin="0,0,5,0" ToolTip="Canvas X"/>
                <TextBlock x:Name="ValCx" Text="0" MinWidth="40" Margin="0,0,15,0"/>

                <TextBlock Text="Cy:" FontWeight="Bold" Margin="0,0,5,0" ToolTip="Canvas Y"/>
                <TextBlock x:Name="ValCy" Text="0" MinWidth="40" Margin="0,0,15,0"/>

                <TextBlock Text="Z:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock x:Name="ValZ" Text="0" MinWidth="30" Margin="0,0,15,0"/>

                <TextBlock Text="P:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock x:Name="ValP" Text="0" MinWidth="40" Margin="0,0,15,0"/>



                <TextBlock Text="Az:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock x:Name="ValAz" Text="0" MinWidth="30" Margin="0,0,15,0"/>

                <TextBlock Text="Alt:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock x:Name="ValAlt" Text="0" MinWidth="30" Margin="0,0,15,0"/>
                
                <TextBlock Text="Time:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock x:Name="ValTime" Text="0" MinWidth="50"/>
            </StackPanel>
        </Border>
        
          <Border Grid.Row="1" Background="#EEE" Padding="20" Margin="5">
             <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
               <Image x:Name="CanvasImage" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top">
                   <Image.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="5" BlurRadius="10"/>
                   </Image.Effect>
               </Image>
             </ScrollViewer>
          </Border>
    </Grid>
</Window>
