<Window x:Class="SevenPaint.WintabInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinTab Information" Height="350" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="File Path:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="TxtPath" IsReadOnly="True" BorderThickness="0" Background="Transparent" TextWrapping="Wrap" Margin="0,0,0,5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="File Size:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtSize" Margin="0,0,0,5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Signer:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtSigner" TextWrapping="Wrap" Margin="0,0,0,5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="File Version:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtFileVersion" Margin="0,0,0,5"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Product Name:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TxtProductName" Margin="0,0,0,5"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Product Version:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TxtProductVersion" Margin="0,0,0,5"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Copyright:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="6" Grid.Column="1" x:Name="TxtCopyright" TextWrapping="Wrap" Margin="0,0,0,5"/>

        <Button Grid.Row="8" Grid.ColumnSpan="2" Content="Close" Width="100" HorizontalAlignment="Center" Click="ButtonClose_Click"/>
    </Grid>
</Window>
